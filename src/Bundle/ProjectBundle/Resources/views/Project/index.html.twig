
{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set gridName = 'projectm-project-project-grid' %}
{% set pageTitle = 'dmkprojectm.project.entity_label'|trans %}

{% block navButtons %}
    {% if is_granted('projectm_project_project_create') %}
        {% set dialogTitle = 'dmkprojectm.project.create_entity'|trans %}
        {{ UI.clientButton({
            'dataUrl': path('projectm_project_project_create'),
            'aCss': 'no-hash',
            'iCss': 'fa-plus',
            'dataId': null,
            'title' : dialogTitle,
            'label' : dialogTitle,
            'widget' : {
                'type' : 'dialog',
                'multiple' : false,
                'reload-grid-name' : gridName,
                'options' : {
                    'stateEnabled': false,
                    'dialogOptions' : {
                        'title' : dialogTitle,
                        'allowMaximize': true,
                        'allowMinimize': true,
                        'dblclick': 'maximize',
                        'maximizedHeightDecreaseBy': 'minimize-bar',
                        'width': 500
                    }
                }
            }
        })
        }}
    {% endif %}
{% endblock %}

